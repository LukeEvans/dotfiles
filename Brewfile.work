cask_args appdir: '/Applications'

tap 'homebrew/bundle'
tap 'caskroom/versions'
tap 'homebrew/cask-drivers'

cask 'xquartz' # required for libcaca
cask 'java8'   # required for gradle

brew 'gradle'
brew 'groovy'
brew 'hub'
brew 'jp2a'
brew 'jenv'
brew 'jq'
brew 'kotlin'
brew 'libcaca', args: ['with-imlib2']
brew 'libgit2'
brew 'maven'
brew 'node'
brew 'postgresql'

cask 'docker'
